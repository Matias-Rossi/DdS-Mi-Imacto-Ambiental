{{#partial "contenido" }}

    <div class="d-flex flex-column" id="content-wrap">
        <div class=" d-flex align-self-center conteinerRegistro">
            <main>
                <div class="row" style="margin:1vmax 1vmax 1vmax 1vmax;">
                    <div class="list-group" id="boxTrayectos">

                        <form class="was-validated" method="POST" action="/agenteSectorial/HCNacional" novalidate>
                            <div class="row" style="margin:1vmax 1vmax 1vmax 1vmax;">
                                <h3 class="textoIngreso">Seleccionar Provincias </h3>
                            </div>
                            <div class="row" style=" margin:1vmax 1vmax 1vmax 1vmax;max-width: 700px!important; ">
                            {{#each provincias}}
                            <div class="col-md-4">
                                <input class="selectorProvincia" type="checkbox" id="{{nombreProvincia}}" name="{{nombreProvincia}}" value="{{id}}" />
                                <label class="form-check-label textoInputs" for="{{nombreProvincia}}">{{nombreProvincia}}</label>
                            </div>
                            {{/each}}
                            </div>
                            <div class="d-flex justify-content-center" style="margin: 10px 0px 20px 0px;">
                                <button class="btn-custom" type="submit" id="hcProvincias">Aceptar</button>

                            </div>
                        </form>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <scipt src="/js/selectorProvincias.js"></scipt>


{{/partial}}
{{> base.hbs }}